@model List<BikesRent.BusinessLogicLayer.ViewModels.RentHistoryViewModel>

@{
    ViewData["Title"] = "The rent history";
}

<div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Bike Id</th>
            <th scope="col">User Name</th>
            <th scope="col">Start time</th>
            <th scope="col">Is Active?</th>
            <th scope="col">End time</th>
        </tr>
        </thead>
            
        <tbody>
        @foreach (var rent in @Model)
        {
            <tr>
                <th scope="row">@rent.Id</th>
                <td>@rent.Bike.Id</td>
                <td>@rent.User.Name</td>
                <td>@rent.StartTime</td>
                <td>
                    @if (rent.IsActive)
                    {
                        <span>Yes</span>
                    }
                    else
                    {
                        <span>No</span>
                    }
                </td>
                <td>@rent.EndTime</td>
            </tr>
        }
        </tbody>
    </table>
</div>